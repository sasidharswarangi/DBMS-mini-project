<%= content_for :title do%>Sign up<% end %>

<%= bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name), layout: :horizontal) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>

    <%= f.password_field :password, autocomplete: "new-password", helper: "#{@minimun_password_length} characters minimun" %>

    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>

    <center>
      <%= f.primary "Sign up" %>
    </center>
<% end %>
