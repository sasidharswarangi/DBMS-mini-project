<%= content_for :title do %>Recover password<% end %>

<%= bootstrap_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }, layout: :horizontal) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <%= f.email_field :email, autofocus: true, autocomplete: "email" %>

  <center>
    <%= f.primary "Send recovery instructions" %>
  </center>
<% end %>
