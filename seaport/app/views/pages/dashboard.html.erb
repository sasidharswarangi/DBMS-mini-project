<%= content_for :title do %>Dashboard<% end %>

<div class="row">
  <div class="col-lg-12">
    <div class="card shadow mb-4">
      <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
        <h6 class="m-0 font-weight-bold text-primary">
          Overview | Docks
        </h6>
      </div>

      <div class="card-body">
        <div class="table-responsive">
          <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
            <thead>
              <tr>
                <th>Type</th>
                <th>Total</th>
                <th>Occupied</th>
                <th>Available</th>
              </tr>
            </thead>

            <tbody>
              <% @docks.each do |size, docks| %>
                <tr>
                  <td><%= size %></td>
                  <td><%= docks.length %></td>
                  <td><%= docks.count(&:occupied) %></td>
                  <td><%= docks.length - docks.count(&:occupied) %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
