<!DOCTYPE html>
<html lang="en">

  <head>
    <title><%= yield :title %></title>

    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body id="page-top">
    <div id="wrapper">
      <ul class="navbar-nav bg-gradient-primary sidebar sidebar-dark accordion pt-3" id="accordianSidebar">
        <a class="sidebar-brand d-flex align-items-center justify-content-center"href="#">
          <div class="sidebar-brand-text mx-3">Seaport Management System</div>
        </a>

        <hr class="sidebar-divider my-0"/>

        <% if user_signed_in? %>
          <li class="nav-item">
            <a class="nav-link" href="<%= root_path %>">
              <span>Dashboard</span>
            </a>
          </li>

          <li class="nav-item">
            <%= link_to destroy_user_session_path, method: :delete, class: 'nav-link' do %>
              <span>Log out</span>
            <% end %>
          </li>
        <% else %>
          <li class="nav-item">
            <a class="nav-link" href="<%= new_user_session_path %>">
              <span>Log in</span>
            </a>
          </li>

          <li class="nav-item">
            <a class="nav-link" href="<%= new_user_registration_path %>">
              <span>Sign up</span>
            </a>
          </li>

          <li class="nav-item">
            <a class="nav-link" href="<%= new_user_password_path %>">
              <span>Recover password</span>
            </a>
          </li>
        <% end %>
      </ul>

      <div id="content-wrapper" class="d-flex flex-column pt-3">
        <div id="content">
          <div class="container-fluid">
            <h1 class="h3 mb-4 text-gray-800"><%= yield :title %></h1>


            <%= yield %>
          </div>
        </div>

        <footer class="sticky-footer bg-white">
          <div class="container my-auto">
            <div class="copyright text-center my-auto">
              <span>Seaport Management System<br/><br/>Submitted by Abhishek Kumar and Sashidhar Swarangi.</span>
            </div>
          </div>
        </footer>
      </div>
    </div>
  </body>

  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>

  <script>
    <% if notice %>
      toastr.success("<%= notice %>")
    <% end %>

    <% if alert %>
      toastr.error("<%= alert %>")
    <% end %>
  </script>
</html>
