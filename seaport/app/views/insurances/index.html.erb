<p id="notice"><%= notice %></p>

<h1>Insurances</h1>

<table>
  <thead>
    <tr>
      <th>Company</th>
      <th>Insurance type</th>
      <th>Premium</th>
      <th>Insurance number</th>
      <th>Cargo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @insurances.each do |insurance| %>
      <tr>
        <td><%= insurance.company_id %></td>
        <td><%= insurance.insurance_type %></td>
        <td><%= insurance.premium %></td>
        <td><%= insurance.insurance_number %></td>
        <td><%= insurance.cargo %></td>
        <td><%= link_to 'Show', insurance %></td>
        <td><%= link_to 'Edit', edit_insurance_path(insurance) %></td>
        <td><%= link_to 'Destroy', insurance, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

