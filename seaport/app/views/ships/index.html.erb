<p id="notice"><%= notice %></p>

<h1>Ships</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Ship type</th>
      <th>Insurance</th>
      <th>Captain</th>
      <th>Beginning</th>
      <th>Destination</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ships.each do |ship| %>
      <tr>
        <td><%= ship.name %></td>
        <td><%= ship.ship_type %></td>
        <td><%= ship.insurance_id %></td>
        <td><%= ship.captain %></td>
        <td><%= ship.beginning %></td>
        <td><%= ship.destination %></td>
        <td><%= link_to 'Show', ship %></td>
        <td><%= link_to 'Edit', edit_ship_path(ship) %></td>
        <td><%= link_to 'Destroy', ship, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

