<%= content_for :title do %><%= @ship.name %><% end %>

<div class="row">
  <div class="col-lg-12">
    <div class="card shadow mb-4">
      <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
        <h6 class="m-0 font-weight-bold text-primary">
          Allocate Dock for <%= @ship.name %>
        </h6>
      </div>

      <div class="card-body">
        <div class="table-responsive">
          <table class="table table-bordered" id="docks" width="100%" cellspacing="0">
            <thead>
              <tr>
                <th>Dock Number</th>
                <th>Occupied by</th>
                <th>Departure</th>
                <th>Next Ship</th>
                <th>Arrival</th>
                <th>Allocate</th>
              </tr>
            </thead>

            <tbody>
              <% chosen_dock = rand(@docks.length) %>
              <% @docks.each_with_index do |dock, index| %>
                <tr>
                  <td><%= dock.dock_number %></td>
                <% if index == chosen_dock %>
                  <td>-</td>
                  <td>-</td>
                  <td>-</td>
                  <td>-</td>
                  <td>
                    <button class="btn btn-primary">Allocate</button>
                  </td>
                <% else %>
                  <td><%= @ships.sample.name %></td>
                  <td>
                    <%= (DateTime.now + rand(23).hours + rand(60).minutes).strftime("%b %e, %l:%M %p") %>
                  </td>
                  <td><%= @ships.sample.name %></td>
                  <td>
                    <%= (DateTime.now + 1.days + rand(23).hours + rand(60).minutes).strftime("%b %e, %l:%M %p") %>
                  </td>
                  <td>-</td>
                <% end %>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
